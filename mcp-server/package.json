{
    "name": "penpot-mcp-server",
    "version": "1.0.0",
    "description": "MCP server for Penpot integration",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "build": "npm run build:index && npm run build:cli && npm run copy-static",
        "build:index": "esbuild src/index.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/index.js --external:@modelcontextprotocol/* --external:ws --external:express --external:class-transformer --external:class-validator --external:reflect-metadata --external:pino --external:pino-pretty --external:js-yaml",
        "build:cli": "esbuild src/cli.ts --bundle --platform=node --target=node18 --format=esm --outfile=dist/cli.js --external:@modelcontextprotocol/* --external:ws --external:express --external:class-transformer --external:class-validator --external:reflect-metadata --external:pino --external:pino-pretty --external:js-yaml",
        "copy-static": "node -e \"require('fs').cpSync('src/static', 'dist/static', { recursive: true })\"",
        "build:types": "tsc --emitDeclarationOnly --outDir dist",
        "build:full": "npm run build && npm run build:types",
        "start": "node dist/index.js",
        "dev": "node --loader ts-node/esm src/index.ts"
    },
    "keywords": [
        "mcp",
        "penpot",
        "server"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.17.5",
        "@penpot-mcp/common": "file:../common",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "express": "^4.18.0",
        "js-yaml": "^4.1.0",
        "pino": "^9.10.0",
        "pino-pretty": "^13.1.1",
        "reflect-metadata": "^0.1.13",
        "ws": "^8.18.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.0",
        "@types/js-yaml": "^4.0.9",
        "@types/node": "^20.0.0",
        "@types/ws": "^8.5.10",
        "esbuild": "^0.19.0",
        "ts-node": "^10.9.0",
        "typescript": "^5.0.0"
    },
    "ts-node": {
        "esm": true
    }
}
